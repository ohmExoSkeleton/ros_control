<launch>
<!-- args -->
	<arg name="gui" default="true" />
	<arg name="paused" default="false" />
	<rosparam file="$(find ros_display)/config/joints.yaml" command="load" />
	
<!-- rviz params -->
	<param name="robot_description" textfile="$(find ros_display)/urdf/exo_rig.urdf" />
	<param name="use_gui" value="$(arg gui)" />
	
<!-- nodes for rviz -->
	<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
	<!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" /> -->
	
<!-- nodes for gazebo  -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find ros_display)/exo_rig.rviz" />
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)" />
	</include>
	<node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-file $(find ros_display)/urdf/exo.urdf -urdf -model ros_display" output="screen" />
</launch>
